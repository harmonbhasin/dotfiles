{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_BUG_COMMAND": "1",
    "ENABLE_BACKGROUND_TASKS": "1",
    "FORCE_AUTO_BACKGROUND_TASKS": "1",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(git show:*)",
      "Bash(git fetch:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(gh view:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr status:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh run view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh api:*)",
      "Bash(pytest:*)",
      "Bash(ruff:*)",
      "Bash(mypy:*)",
      "Bash(tmux capture-pane:*)",
      "Read(~/dotfiles/**)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": []
  },
  "model": "opus[1m]",
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/dotfiles/claude/hooks/block-push-protected-branches.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "$HOME/dotfiles/claude/hooks/block-rm-commands.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "$HOME/dotfiles/claude/hooks/require-squash-merge.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754413237616
  }
}
